{
    "name": "${environmentName}",
    "description": "Dokuwiki",
    "version": "2016-06-26a",
    "author": "https://github.com/happyaron",
    "containers": [
        {
            "hostname": "${webContainerName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "80"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/subutai-blueprints/dokuwiki-blueprint/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domainName}"
            },
            {
                "key": "webAppPassword",
                "value": "${webAppPassword}"
            },
            {
                "key": "emailServer",
                "value": "${emailServer}"
            },
            {
                "key": "emailPort",
                "value": "${emailPort}"
            },
            {
                "key": "emailAccount",
                "value": "${emailAccount}"
            },
            {
                "key": "emailUser",
                "value": "${emailUser}"
            },
            {
                "key": "emailPassword",
                "value": "${emailPassword}"
            }
        ],
        "groups": [
            {
                "name": "dokuwiki",
                "hostnames": [
                    "${webContainerName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "dokuwiki",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "webContainerName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "dokuwiki",
            "validation": "[a-zA-Z0-9]+"
        },
        "webAppPassword": {
            "description": "Enter the password of the application",
            "type": "string",
            "default": "subutai"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        },
        "emailServer": {
            "description": "Server to send Email",
            "type": "string",
            "default": "smtp.gmail.com"
        },
        "emailPort": {
            "description": "Server port to send Email",
            "type": "string",
            "default": "587",
            "validation": "[0-9]+"
        },
        "emailAccount": {
            "description": "Email account to send Email",
            "type": "string",
            "default": "myawesomeapp@gmail.com"
        },
        "emailUser": {
            "description": "Email user, usually same as account name but without @gmail.com suffix",
            "type": "string",
            "default": "myawesomeapp",
            "validation": "[a-zA-Z0-9]+"
        },
        "emailPassword": {
            "description": "Email account password",
            "type": "string",
            "default": ""
        }
    }
}
